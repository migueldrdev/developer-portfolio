---
import { Image } from "astro:assets";
import TitleSection from "@components/ui/TitleSection.astro";
import Code from "@components/icons/Code.astro";
import type { Project } from "@interfaces/Project";

// 1. IMPORTACIÓN DE IMÁGENES LOCALES (Solo para proyectos personales que requieren optimización)
// Asegúrate de que estas rutas existan en tu proyecto
import portfolioImg from "@assets/projects/developer-portfolio.jpg";
import agrovisionLogo from "@assets/images/agrovision-logo.jpeg";
import educadLogo from "@assets/images/educad-logo.jpeg";

// 2. MAPEO DE CLAVES JSON -> IMÁGENES IMPORTADAS
const localImages: Record<string, ImageMetadata> = {
  "portfolio-v2": portfolioImg,
  "agrovision-logo": agrovisionLogo,
  "educad-logo": educadLogo,
};

// 3. RECIBIR PROPS
interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section
  id="projects"
  class="scroll-section px-4 pt-24 md:px-0 w-full mx-auto container lg:max-w-4xl md:max-w-2xl text-gray-700 dark:text-gray-300"
>
  <div class="w-full text-left">
    <TitleSection>
      <Code class="size-8" /> Proyectos Destacados
    </TitleSection>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
      {
        projects.map((project: Project) => (
          <article
            class={`
            group relative flex flex-col overflow-hidden rounded-2xl border shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-md
            ${
              project.highlight
                ? "border-blue-500/50 dark:border-blue-400/50 ring-1 ring-blue-500/20 bg-white dark:bg-gray-900"
                : "border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950"
            }
          `}
          >
            {/* --- HEADER DE LA TARJETA --- */}
            <div
              class={`
                relative h-52 overflow-hidden border-b border-gray-100 dark:border-gray-800
                ${project.type === "client" ? "bg-linear-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900" : "bg-blue-50/50 dark:bg-gray-800/50"}
              `}
            >
              {/* CASO 1: PROYECTO PERSONAL (Browser Window + Astro Image) */}
              {project.type === "personal" &&
                project.image &&
                localImages[project.image] && (
                  <div class="w-full h-full p-6 pb-0 flex items-end justify-center group-hover:bg-blue-100/30 dark:group-hover:bg-gray-800 transition-colors">
                    <div class="relative w-full h-full rounded-t-lg overflow-hidden shadow-lg border border-gray-200 dark:border-gray-700 bg-white transform group-hover:scale-[1.02] transition-transform duration-500 origin-bottom">
                      {/* Fake Browser Bar */}
                      <div class="h-5 bg-gray-100 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 flex items-center px-2 gap-1.5">
                        <div class="w-2 h-2 rounded-full bg-red-400" />
                        <div class="w-2 h-2 rounded-full bg-yellow-400" />
                        <div class="w-2 h-2 rounded-full bg-green-400" />
                      </div>

                      <Image
                        src={localImages[project.image]}
                        alt={project.title || "Project Image"}
                        class="w-full h-full object-cover object-top"
                        width={600}
                        quality={80}
                        loading="lazy"
                      />
                    </div>
                  </div>
                )}

              {/* CASO 2: CLIENTE (Logo o Icono Abstracto) */}
              {project.type === "client" && (
                <div class="absolute inset-0 flex flex-col items-center justify-center p-6">
                  {/* Contenedor del Logo */}
                  <div class="w-16 h-16 mb-3 rounded-xl bg-white dark:bg-gray-800 shadow-sm border border-gray-100 dark:border-gray-700 flex items-center justify-center p-2 z-10">
                    {project.logo && localImages[project.logo] ? (
                      <Image
                        src={localImages[project.logo]}
                        alt={project.clientName || "Project Logo"}
                        class="w-full h-full object-contain opacity-90 group-hover:scale-110 transition-transform duration-500"
                        width={600}
                        quality={80}
                        loading="lazy"
                      />
                    ) : null}

                    {/* Icono Abstracto (Fallback o Default) */}
                    <div
                      class={`w-full h-full text-gray-400 dark:text-gray-500 ${project.logo && localImages[project.logo] ? "hidden" : "block"}`}
                      set:html={project.abstractIcon}
                    />
                  </div>

                  <div class="text-center z-10">
                    <span class="block text-[10px] font-bold tracking-widest uppercase text-gray-400 dark:text-gray-500 mb-1">
                      Cliente
                    </span>
                    <h4 class="text-base font-bold text-gray-800 dark:text-gray-200 leading-tight">
                      {project.clientName}
                    </h4>
                  </div>
                </div>
              )}
            </div>

            {/* --- CUERPO DE LA TARJETA --- */}
            <div class="flex-1 p-6 flex flex-col">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white leading-tight group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {project.type === "client"
                    ? project.productName
                    : project.title}
                </h3>
                {project.role && (
                  <span class="inline-block px-2 py-0.5 text-[10px] font-bold uppercase tracking-wide rounded bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400 border border-gray-200 dark:border-gray-700 shrink-0 ml-2">
                    {project.role}
                  </span>
                )}
              </div>

              <p class="text-sm text-gray-600 dark:text-gray-400 mb-6 flex-1 leading-relaxed">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-2 mb-6">
                {project.tags.map((tag) => (
                  <span class="px-2.5 py-0.5 text-[11px] font-medium rounded-md bg-blue-50 text-blue-700 dark:bg-blue-900/20 dark:text-blue-300 border border-blue-100 dark:border-blue-900/50">
                    {tag}
                  </span>
                ))}
              </div>

              {/* --- FOOTER DE ACCIONES --- */}
              <div class="mt-auto pt-4 border-t border-gray-100 dark:border-gray-800">
                {project.demoLink || project.codeLink ? (
                  <div class="flex gap-4">
                    {project.demoLink && (
                      <a
                        href={project.demoLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center text-sm font-semibold text-blue-600 dark:text-blue-400 hover:underline"
                      >
                        Ver Demo <span class="ml-1">→</span>
                      </a>
                    )}
                    {project.codeLink && (
                      <a
                        href={project.codeLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center text-sm font-semibold text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                      >
                        <Code class="size-4 mr-1.5" />
                        Código
                      </a>
                    )}
                  </div>
                ) : (
                  <div class="flex items-center text-xs text-gray-400 dark:text-gray-500 italic">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-3 w-3 mr-1.5"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                      <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                    </svg>
                    Software propietario / Confidencial
                  </div>
                )}
              </div>
            </div>
          </article>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        href="https://github.com/miguelDR05"
        target="_blank"
        class="inline-flex items-center px-6 py-3 text-base font-medium text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-full shadow-sm hover:bg-gray-50 dark:hover:bg-gray-700 transition-all hover:-translate-y-0.5"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-1.245-3.795-1.245-.54-1.365-1.335-1.725-1.335-1.725-1.095-.75.075-.735.075-.735 1.2.075 1.83 1.23 1.83 1.23 1.08 1.845 2.805 1.32 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405 1.02 0 2.04.135 3 .405 2.28-1.56 3.285-1.245 3.285-1.245.645 1.665.24 2.895.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.61-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.285 0 .315.225.69.825.57C20.565 21.795 24 17.31 24 12c0-6.63-5.37-12-12-12z"
          ></path>
        </svg>
        Ver más repositorios en GitHub
      </a>
    </div>
  </div>
</section>
