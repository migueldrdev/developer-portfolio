---
import type {Props} from "@interfaces/Input";

const {
  type = "text",
  placeholder,
  name,
  required = true,
  value,
  class: className,
  id,
  autocomplete,
  minlength,
  maxlength,
  pattern,
  disabled = false,
  ...rest
} = Astro.props;
---

<input
  type={type}
  placeholder={placeholder}
  name={name}
  required={required}
  value={value}
  class:list={[
    "w-full px-4 py-3 bg-gray-700 text-white rounded-lg border border-gray-600 focus:outline-none focus:border-sky-500 transition",
    className,
  ]}
  id={id}
  autocomplete={autocomplete}
  minlength={minlength}
  maxlength={maxlength}
  pattern={pattern}
  disabled={disabled}
  {...rest}
/>
